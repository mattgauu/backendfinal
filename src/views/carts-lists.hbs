<h1>Lista de Carritos</h1>

{{#if carts.length}}
    <ul>
        {{#each carts}}
            <li>
                <strong>Carrito ID:</strong> {{this._id}}<br>
                <strong>Productos:</strong>
                <ul>
                    {{#each this.products}}
                        <li>{{this.product.title}} - Cantidad: {{this.quantity}}</li>
                    {{/each}}
                </ul>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>No hay carritos disponibles.</p>
{{/if}}
